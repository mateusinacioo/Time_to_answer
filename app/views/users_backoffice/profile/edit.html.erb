<div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h1>Dados do Perfil </h1>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <% if @user.errors.any? %>
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <ul>
                                <% @user.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>

                    <%= form_with(url: users_backoffice_profile_path, model: @user, local: true) do |form| %>

                      <div class="form-group">
                            <%= form.label :first_name, class:"control-label col-md-3 col-sm-3 col-xs-12">Nome</label> %>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <%= form.password_field :first_name %>
                            </div>
                        </div>
                      
                      <div class="form-group">
                            <%= form.label :last_name, class:"control-label col-md-3 col-sm-3 col-xs-12">Sobre nome</label> %>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <%= form.password_field :last_name %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= form.label :email, class:"control-label col-md-3 col-sm-3 col-xs-12">Email</label> %>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <%= form.text_field :email, 
                                class:"form-control col-md-7 col-xs-12", 
                                readonly: true %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= form.label :password, class:"control-label col-md-3 col-sm-3 col-xs-12">Senha </label> %>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <%= form.password_field :password, 
                                class:"form-control col-md-7 col-xs-12" %>
                            </div>
                        </div>

                        <div class="form-group">
                            <%= form.label :password_confirmation, class:"control-label col-md-3 col-sm-3 col-xs-12"> Confirmar senha</label> %>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <%= form.password_field :password_confirmation, 
                                class:"form-control col-md-7 col-xs-12" %>
                            </div>
                        </div>

                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                          <button type="submit" class="btn btn-success">Enviar</button>
                        </div>
                      </div>

                    <% end %>
                  </div>
                </div>
              </div>
            </div>